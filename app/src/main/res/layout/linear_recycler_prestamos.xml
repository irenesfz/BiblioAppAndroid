<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:padding="2dp"
    app:cardBackgroundColor="#FF45559B"
    android:id="@+id/linea"
    app:cardCornerRadius="10dp">
    <LinearLayout
        android:layout_width="290dp"
        android:layout_height="90dp"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="Título: "
                android:textStyle="bold"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/TituloRecycler"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginBottom="5dp"
                android:textStyle="bold"
                android:textColor="#7080C2" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:textStyle="bold"
                android:text="Fecha del préstamo:"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/FechaPrestamoRecycler"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginBottom="5dp"
                android:textColor="#7080C2" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/fechaTopeLinear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:textStyle="bold"
                android:text="Fecha tope devolución: "
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/FechaDevolucionRecycler"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginBottom="5dp"
                android:textColor="#F30000" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/fechaDevueltaLinear">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="Fecha devolución: "
                android:textStyle="bold"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/FechaDevolucionFinalRecycler"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginBottom="5dp"
                android:textColor="#F30000" />
        </LinearLayout>
    </LinearLayout>
    <ImageView
        android:id="@+id/ImgRecycler"
        android:layout_marginEnd="15dp"
        android:layout_width="60dp"
        android:layout_height="75dp"
        android:layout_gravity="center_vertical|right"/>
</androidx.cardview.widget.CardView>