<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="15dp"
        android:text="Marca la opción que quieras filtrar:"
        android:textColor="@color/black"
        android:textSize="17dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp">

            <RadioButton
                android:id="@+id/AutoresRadioButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Autores" />

            <RadioButton
                android:id="@+id/TituloRadioButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:checked="true"
                android:text="Titulo" />

            <RadioButton
                android:id="@+id/CategoriasRadioButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Categoría/Subcategoría" />

            <RadioButton
                android:id="@+id/EditorialRadioButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Editorial" />

            <RadioButton
                android:id="@+id/ISBNRadioButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="ISBN" />

            <RadioButton
                android:id="@+id/FechaPublicacionRadioButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Año publicación" />

        </RadioGroup>
    </LinearLayout>
</LinearLayout>